<%- include ('./base/header.ejs') %>
    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">RDEC</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/student/add/page">Add Student</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">List Students</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="alert bg-success my-3 text-center" style="color: white">
            <h4>Student List</h4>
        </div>
    </div>
    <div class="container">
        <table class="table text-center">
            <thead>
                <tr>
                    <th>Student Image</th>
                    <th>Roll No</th>
                    <th>Name</th>
                    <th>Mother's Name</th>
                    <th>Father's Name</th>
                    <th>Course</th>
                    <th>Branch</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student=>{ %>
                    <tr>
                        <td>
                            <img src="<%= student.studentImage %>" width="50px" height="50px" style="border-radius:50%"
                                alt="">
                        </td>
                        <td>
                            <%=student.rollNo%>
                        </td>
                        <td>
                            <%=student.studentName%>
                        </td>
                        <td>
                            <%=student.motherName%>
                        </td>
                        <td>
                            <%=student.fatherName%>
                        </td>
                        <td>
                            <%=student.course%>
                        </td>
                        <td>
                            <%=student.branch%>
                        </td>
                        <td>
                            <a href="/edit/student/page/<%= student._id %>" class="btn btn-warning">Edit</a>
                            <a href="/delete/student/<%= student._id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <%- include('./base/footer.ejs') %>